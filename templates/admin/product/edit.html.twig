{% extends 'admin/base.html.twig' %}

{% block title %}Modifier le Produit{% endblock %}

{% block styles %}
<style>
    .form-container {
        max-width: 850px;
        margin: 2rem auto;
        background-color: #fef7fb;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(245, 13, 152, 0.2);
        padding: 2rem;
    }
    .form-header {
        border-bottom: 2px solid #eab0d5;
        margin-bottom: 1.5rem;
        padding-bottom: 0.5rem;
    }
    .form-header h2 {
        color: #b14d8f;
        font-weight: bold;
    }
    .btn-primary {
        background-color: #d770ad;
        border-color: #d770ad;
        color: #fff;
    }
    .btn-primary:hover {
        background-color: #c25c99;
        border-color: #c25c99;
    }
    .btn-secondary {
        background-color: #eee;
        border-color: #ccc;
        color: #333;
    }
    .btn-secondary:hover {
        background-color: #ddd;
    }
</style>
{% endblock %}

{% block content %}
<div class="form-container">
    <div class="form-header d-flex justify-content-between align-items-center">
        <h2>Modifier le produit : {{ product.name }}</h2>
        <a href="{{ path('admin_product_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour
        </a>
    </div>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <div class="text-end mt-4">
            <button type="submit" class="btn btn-primary me-2">
                <i class="fas fa-save me-2"></i>Enregistrer les modifications
            </button>
            <a href="{{ path('admin_product_index') }}" class="btn btn-secondary">
                Annuler
            </a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
