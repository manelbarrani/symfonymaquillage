{% extends 'base.html.twig' %}

{% block title %}Éclat Beauté - Boutique de Maquillage{% endblock %}

{% block body %}

{% set images = [
    'https://zwine.ma/cdn/shop/collections/15.png?crop=center&height=1200&v=1730233870&width=1200',
    'https://api.ellequebec.com/app/uploads/2020/04/Sephora-vente-VIB.jpg',
    'https://cache.stylist.fr/data/photo/w1000_ci/6q/nouveaute-s-printemps-sephora.jpg',
    'https://i.ytimg.com/vi/C6HzobKbN1g/maxresdefault.jpg',
    'https://api.ellequebec.com/app/uploads/2021/03/top-ELLE-meilleures-nouveaute%CC%81s-sephora-canada.jpg',
    'https://cache.stylist.fr/data/photo/w1000_ci/70/nouveaute-s-mars-sephora.jpg',
    'https://cache.stylist.fr/data/photo/w1000_ci/6q/nouveaute-s-printemps-sephora.jpg'
] %}

<section class="slider-section py-5 text-center">
    <div class="container">
        <h2 class="fw-bold mb-4">Découvrez nos inspirations maquillage</h2>
        <div class="slider-container position-relative overflow-hidden">
            <div class="slider-track d-flex">
                {% for imgUrl in images %}
                <div class="slide">
                    <img src="{{ imgUrl }}" alt="Makeup inspiration">
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

<style>
/* Mettre un fond gris sur toute la page (body) */
body {
    background-color:#fff6f9; 
    margin: 0; /* enlève marges par défaut */
    padding: 0;
}

/* Conteneur général */
.slider-section {
    /* Pas de bg-light ici */
}

/* Slider styles */
.slider-container {
    max-width: 100%;
    margin: 0 auto;
    position: relative;
    height: 420px;
    overflow: hidden;
}
.slider-track {
    display: flex;
    gap: 15px;
    animation: slide-animation 18s linear infinite;
}
.slide {
    min-width: 400px;
    flex-shrink: 0;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 6px 18px rgb(0 0 0 / 0.15);
    cursor: pointer;
    transition: transform 0.3s ease;
    background-color: white; /* blanc sous l'image */
}
.slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}
.slide:hover {
    transform: scale(1.05);
}

@keyframes slide-animation {
    0% {
        transform: translateX(0);
    }
    100% {
        transform: translateX(calc(-400px * {{ images|length }} - 15px * {{ images|length }}));
    }
}

@media (max-width: 768px) {
    .slider-container {
        height: 300px;
    }
    .slide {
        min-width: 250px;
    }
    .slider-track {
        animation: slide-animation-mobile 18s linear infinite;
    }
    @keyframes slide-animation-mobile {
        0% { transform: translateX(0); }
        100% { transform: translateX(calc(-250px * {{ images|length }} - 15px * {{ images|length }})); }
    }
}
</style>

{% endblock %}
