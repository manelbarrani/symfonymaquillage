{% block title %}Éclat Beauté - Boutique de Maquillage{% endblock %}

{% block body %}

{% set images = [
    'https://zwine.ma/cdn/shop/collections/15.png?crop=center&height=1200&v=1730233870&width=1200',
    'https://api.ellequebec.com/app/uploads/2020/04/Sephora-vente-VIB.jpg',
    'https://cache.stylist.fr/data/photo/w1000_ci/6q/nouveaute-s-printemps-sephora.jpg',
    'https://i.ytimg.com/vi/C6HzobKbN1g/maxresdefault.jpg',
    'https://api.ellequebec.com/app/uploads/2021/03/top-ELLE-meilleures-nouveaute%CC%81s-sephora-canada.jpg',
    'https://cache.stylist.fr/data/photo/w1000_ci/70/nouveaute-s-mars-sephora.jpg',
    'https://cache.stylist.fr/data/photo/w1000_ci/6q/nouveaute-s-printemps-sephora.jpg'
] %}

<section class="slider-section py-5">
    <div class="container">
        <div class="header-slider d-flex align-items-center justify-content-between mb-4">
            <h2 class="title m-0 flex-grow-1 text-center">Découvrez nos inspirations maquillage</h2>
            <a href="{{ path('app_register') }}" class="btn btn-create-account ms-4">Créer un compte</a>
        </div>
        <div class="slider-container position-relative overflow-hidden shadow-soft rounded mx-auto">
            <div class="slider-track d-flex">
                {% for imgUrl in images %}
                <div class="slide">
                    <img src="{{ imgUrl }}" alt="Makeup inspiration">
                </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

<style>
@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap');

/* Corps de la page */
body {
    background-color: #fff6f9;
    margin: 0;
    padding: 0;
    font-family: 'Montserrat', sans-serif;
    color: #5a3e3e;
}

/* Container */
.container {
    max-width: 1200px;
    margin: 0 auto;
}

/* Header du slider avec flex */
.header-slider {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

/* Le titre prend tout l'espace sauf celui du bouton */
.header-slider .title {
    flex-grow: 1;
    text-align: center;
    font-size: 2.8rem;
    color: rgb(200, 21, 81);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin: 0;
}

/* Bouton aligné à droite */
.btn-create-account {
    background: linear-gradient(135deg, #d46a78, #b04e5a);
    color: white;
    padding: 12px 36px;
    font-size: 1.1rem;
    font-weight: 700;
    border-radius: 40px;
    border: none;
    cursor: pointer;
    text-decoration: none;
    transition: background 0.4s ease, transform 0.3s ease;
    box-shadow: 0 4px 12px rgba(176, 78, 90, 0.4);
    white-space: nowrap;
}

.btn-create-account:hover {
    background: linear-gradient(135deg, #b04e5a, #d46a78);
    transform: scale(1.05);
    box-shadow: 0 6px 20px rgba(176, 78, 90, 0.6);
}

/* Slider */
.slider-container {
    width: 100%;
    height: 500px;
    overflow: hidden;
    border-radius: 20px;
    box-shadow: 0 12px 24px rgba(176, 78, 90, 0.3);
    background: #fff0f3;
    margin: 0 auto;
}

/* Slider track */
.slider-track {
    display: flex;
    gap: 20px;
    animation: slide-animation 20s linear infinite;
}

/* Slide */
.slide {
    min-width: 100%; /* Chaque image prend toute la largeur visible */
    flex-shrink: 0;
    border-radius: 20px;
    overflow: hidden;
    cursor: pointer;
    transition: transform 0.4s ease, box-shadow 0.4s ease;
    box-shadow: 0 4px 12px rgba(176, 78, 90, 0.15);
    background-color: #fff;
}

.slide img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 20px;
}

/* Hover effet */
.slide:hover {
    transform: scale(1.03);
    box-shadow: 0 10px 30px rgba(176, 78, 90, 0.35);
}

/* Animation du slider */
@keyframes slide-animation {
    0% {
        transform: translateX(0);
    }
    100% {
        transform: translateX(calc(-100% * {{ images|length }}));
    }
}
    .title {
        font-size: 1.4rem;
    }

/* Responsive */
@media (max-width: 768px) {
    .slider-container {
        height: 300px;
    }
    .slide {
        min-width: 100%;
        border-radius: 15px;
    }
}
</style>

{% endblock %}
